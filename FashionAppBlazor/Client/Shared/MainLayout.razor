@inject IJSRuntime JsRuntime
@inherits LayoutComponentBase
<!-- Main Wrapper -->
<div class="main-wrapper">

    <!-- Header -->
    <div class="header">

        <!-- Logo -->
        <div class="header-left">
            <!-- <a href="index.html" class="logo">
